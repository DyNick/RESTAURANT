											input#two.input(type='radio', name='selection')
											label.label(for='two') 2-4
											.check
												.inside
										li.radio-buttons-list__item
											input#three.input(type='radio', name='selection')
											label.label(for='three') 5
											.check
												.inside
										li.radio-buttons-list__item
